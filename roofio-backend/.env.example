# ROOFIO Backend Environment Variables
# =====================================
# Copy this to .env and fill in your values

# Environment
ROOFIO_ENV=development

# =============================================================================
# UPSTASH REDIS (Required)
# =============================================================================
# Get these from: https://console.upstash.com/ -> Your Database -> REST API
UPSTASH_REDIS_REST_URL=https://your-redis-endpoint.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token-here

# =============================================================================
# UPSTASH VECTOR (Required for Tier 2 RAG)
# =============================================================================
# Get these from: https://console.upstash.com/ -> Vector -> Your Index
UPSTASH_VECTOR_REST_URL=https://your-vector-endpoint.upstash.io
UPSTASH_VECTOR_REST_TOKEN=your-vector-token-here

# =============================================================================
# DATABASE (Required)
# =============================================================================
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@host:5432/roofio

# Or individual components:
# PGHOST=localhost
# PGPORT=5432
# PGUSER=roofio
# PGPASSWORD=your-password
# PGDATABASE=roofio

# =============================================================================
# SECURITY (Required in Production)
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=your-32-byte-secret-here

# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-key-here

# Session timeout in seconds (default: 3600 = 1 hour)
SESSION_TIMEOUT_SECONDS=3600

# =============================================================================
# AI PROVIDERS
# =============================================================================
# Anthropic (Tier 3 primary)
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI (Tier 3 fallback)
OPENAI_API_KEY=sk-...

# Groq (Tier 2 fast AI)
GROQ_API_KEY=gsk_...

# =============================================================================
# OAUTH PROVIDERS (Optional - for integrations)
# =============================================================================
# QuickBooks
QUICKBOOKS_CLIENT_ID=
QUICKBOOKS_CLIENT_SECRET=

# Dropbox
DROPBOX_CLIENT_ID=
DROPBOX_CLIENT_SECRET=

# Google Drive
GOOGLE_DRIVE_CLIENT_ID=
GOOGLE_DRIVE_CLIENT_SECRET=

# EagleView
EAGLEVIEW_CLIENT_ID=
EAGLEVIEW_CLIENT_SECRET=

# =============================================================================
# RATE LIMITING
# =============================================================================
API_RATE_LIMIT=100
AI_RATE_LIMIT=20
